# SHADOW OPS - Environment Variables Template
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development  # development, production, testing
SECRET_KEY=your-secret-key-here-change-this
DEBUG=True

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this

# Database
DATABASE_URL=sqlite:///shadowops.db  # For production: postgresql://user:pass@localhost/shadowops

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Security
MAX_CONTENT_LENGTH=10485760  # 10MB in bytes
DATA_RETENTION_DAYS=30
ENCRYPTION_KEY=your-encryption-key-here-change-this

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Email Configuration (optional, for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@shadowops.security

# PhishTank API (optional)
PHISHTANK_API_KEY=your-phishtank-api-key

# Stripe (for billing - optional, requires paid account)
# STRIPE_API_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Sentry (for error tracking - optional, requires account)
# SENTRY_DSN=https://...@sentry.io/...

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# Rate Limiting
RATELIMIT_ENABLED=True

# Upload Directory
UPLOAD_FOLDER=uploads
